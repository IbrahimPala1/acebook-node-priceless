<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}}
    <form action="/posts/delete" method="post" class="delete" >
      {{!-- <input name="id" type="text" value="{{this._id}}">     --}}
      <input name="id" id="{{this._id}}" value="{{this._id}}" type="submit">🗑️
    </form>
  </li>

  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
