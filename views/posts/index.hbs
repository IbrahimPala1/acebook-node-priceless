<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}}
    <form action="/posts" class="delete" method="delete">
      <input id="{{this._id}}" value="{{this._id}}" type="submit">🗑️</input>
    </form>
  </li>

  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
